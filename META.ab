version                       = "$(pkg_version)"
description                   = "PPX extension for hardcaml"
requires                      = "compiler-libs.common ppx_core ppx_driver ppx_tools hardcaml"
archive(ppx_driver, byte)     = "ppx_hardcaml.cma"
archive(ppx_driver, native)   = "ppx_hardcaml.cmxa"
plugin(ppx_driver, byte)      = "ppx_hardcaml.cma"
plugin(ppx_driver, native)    = "ppx_hardcaml.cmxs"
exists_if                     = "ppx_hardcaml.cma"
ppx(-ppx_driver,-custom_ppx)  = "./ppx"
